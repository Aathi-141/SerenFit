<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When checked/selected -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purpleLight" />
            <stroke android:width="2dp" android:color="@color/purpleLight" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- When pressed but not selected -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8DEF8" />
            <stroke android:width="2dp" android:color="@color/purpleLight" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cardBackground" />
            <stroke android:width="1dp" android:color="#E8DEF8" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>