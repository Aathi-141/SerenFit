<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Top Bar with Title and Edit Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <!-- Habits Title (Center) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/habits_title"
            android:textColor="@color/textPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <!-- Edit Button (Top Right) -->
        <TextView
            android:id="@+id/btnEditHabits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textColor="@color/purpleLight"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/edit_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <!-- Today Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/today"
        android:textColor="@color/textPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- Drink Water Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Water Drop Emoji -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ’§"
                android:textSize="20sp"
                android:gravity="center" />

            <!-- Habit Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drink_water"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_morning"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Percentage -->
            <TextView
                android:id="@+id/tvWaterPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/purpleLight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Meditate Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMeditate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Meditation Emoji -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ§˜"
                android:textSize="20sp"
                android:gravity="center" />

            <!-- Habit Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/meditate"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_morning"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Percentage -->
            <TextView
                android:id="@+id/tvMeditatePercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/purpleLight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Exercise Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Dumbbell Emoji -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ‹ï¸"
                android:textSize="20sp"
                android:gravity="center" />

            <!-- Habit Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exercise"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_afternoon"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Percentage -->
            <TextView
                android:id="@+id/tvExercisePercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/purpleLight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Journal Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardJournal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Journal Emoji -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ“–"
                android:textSize="20sp"
                android:gravity="center" />

            <!-- Habit Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/journal"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_evening"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Percentage -->
            <TextView
                android:id="@+id/tvJournalPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/purpleLight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Custom Habits Container with ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/habitsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>