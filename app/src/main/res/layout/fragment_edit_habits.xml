<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Top Bar with Back Button and Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <!-- Back Button -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/back_arrow"
            android:textColor="@color/textPrimary"
            android:textSize="20sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <!-- Edit Habits Title (Center) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_habits"
            android:textColor="@color/textPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <!-- Habits List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Drink Water Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Water Drop Emoji -->
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ’§"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <!-- Habit Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drink_water"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_morning"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- Edit and Delete Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Edit Button -->
                        <TextView
                            android:id="@+id/btnEditWater"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background"
                            android:text="@string/edit_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="8dp" />

                        <!-- Delete Button -->
                        <TextView
                            android:id="@+id/btnDeleteWater"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background_red"
                            android:text="@string/delete_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Meditate Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMeditate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Meditation Emoji -->
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ§˜"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <!-- Habit Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meditate"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_morning"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- Edit and Delete Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Edit Button -->
                        <TextView
                            android:id="@+id/btnEditMeditate"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background"
                            android:text="@string/edit_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="8dp" />

                        <!-- Delete Button -->
                        <TextView
                            android:id="@+id/btnDeleteMeditate"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background_red"
                            android:text="@string/delete_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Exercise Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Dumbbell Emoji -->
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ‹ï¸"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <!-- Habit Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exercise"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_afternoon"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- Edit and Delete Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Edit Button -->
                        <TextView
                            android:id="@+id/btnEditExercise"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background"
                            android:text="@string/edit_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="8dp" />

                        <!-- Delete Button -->
                        <TextView
                            android:id="@+id/btnDeleteExercise"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background_red"
                            android:text="@string/delete_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Journal Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardJournal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Journal Emoji -->
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ“–"
                        android:textSize="20sp"
                        android:gravity="center" />

                    <!-- Habit Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/journal"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_evening"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"
                            android:paddingTop="4dp" />
                    </LinearLayout>

                    <!-- Edit and Delete Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Edit Button -->
                        <TextView
                            android:id="@+id/btnEditJournal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background"
                            android:text="@string/edit_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="8dp" />

                        <!-- Delete Button -->
                        <TextView
                            android:id="@+id/btnDeleteJournal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_background_red"
                            android:text="@string/delete_icon"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Custom Habits Container -->
            <LinearLayout
                android:id="@+id/habitsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>

    <!-- Add New Habit Button -->
    <TextView
        android:id="@+id/btnAddNewHabit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purpleLight"
        android:text="@string/add_new_habit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp" />

</LinearLayout>