<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Back Button and Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Back Button -->
            <TextView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="â†"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <!-- Chart Title (Center) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Mood Chart"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <!-- Week Navigation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Previous Week -->
                <TextView
                    android:id="@+id/btnPrevWeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â† Previous"
                    android:textColor="@color/purpleLight"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />

                <!-- Week Display -->
                <TextView
                    android:id="@+id/tvWeekRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="This Week"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="8dp" />

                <!-- Current Week -->
                <TextView
                    android:id="@+id/btnCurrentWeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today"
                    android:textColor="@color/textSecondary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />

                <!-- Next Week -->
                <TextView
                    android:id="@+id/btnNextWeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next â†’"
                    android:textColor="@color/purpleLight"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Insights Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Weekly Mood Analysis"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvInsight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Your weekly mood insights will appear here\nâ€¢ Use navigation to view different weeks"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Chart Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Chart Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7-Day Mood Trend"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="20dp" />

                <!-- Custom Chart View -->
                <com.example.healthandfitness.CustomChartView
                    android:id="@+id/customChartView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- No Data State -->
                <TextView
                    android:id="@+id/tvNoData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No mood data for this week"
                    android:textColor="@color/textSecondary"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>